

@model IEnumerable<Wearhouse3.Class.Category>;

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wearhouse</title>
    <link href="~/css/Category.css" rel="stylesheet" type="text/css">
    <link href="~/css/HeaderTest.css" rel="stylesheet" type="text/css">
</head>
<body>

    <div class="mobile-menu">
        <a asp-area="" asp-controller="Login" asp-action="AddCategory" style="text-decoration:none;"><h1>Category</h1></a>
        <a asp-area="" asp-controller="Login" asp-action="AboutUs" style="text-decoration:none;"><h1>About Us</h1></a>
        <a href="@Url.Action("Logout", "Login")" style="text-decoration:none;"><h1>Logout</h1></a>
    </div>
    <nav class="nav-container">
        <div class="website-navigation">
            <h1>Wearhouse</h1>
            <div class="list">
                <div class="nav-website-list-container">
                    <a asp-area="" asp-controller="Login" asp-action="AddCategory" style="text-decoration:none;"><h2>Category</h2></a>
                    <a asp-area="" asp-controller="Login" asp-action="AboutUs" style="text-decoration:none;"><h2>About Us</h2></a>
                </div>
                <div class="nav-list-container">
                    <div>@ViewBag.username</div>
                    <div class="drop-down"><img src="~/img/down-chevron.png"></div>

                    <div class="logout-container">
                        <h1><a href="@Url.Action("Logout", "Login")" style="text-decoration:none;">Logout</a></h1>
                    </div>
                </div>
            </div>

            <div class="nav-list-container-mobile">
                <img src="~/img/menu.png">
            </div>
        </div>
    </nav>

  
@using(Html.BeginForm("AddCategoryName", "Login", FormMethod.Post)){
    <div id="myPopupAdd" class="popup">
        <div class="popup-content">
            <div class="popup-add-container">
                <p>Add Category</p>
                <div class="close"><img src="~/img/cross.png"></div>
            </div>
            <div class="popup-insert-container">
                <p>Category</p>
                 <input type="text" data-id="101" runat="server" id="text_value" name="name">
                 <p class="category-validation" style="display:none; color:red;">Please insert a category name</p>
            </div>
            <div class="submit-container">
                
            <div class="submit-button">Submit</div>
            </div>
        </div>
    </div>
}

@using(Html.BeginForm("Edit", "Login", FormMethod.Post)){
    <form method="Post">
    <div id="myPopupEdit" class="popup">
        <input type="hidden" class="edit-value" name="edit">
        <div class="popup-content">
            <div class="popup-add-container">
                <p>Edit Category</p>
                <div class="close"><img src="~/img/cross.png"></div>
            </div>
            <div class="popup-insert-container">
                <p>Category</p>
                <input type="text" data-id="101" runat="server" id="text_value_edit" name="nameedit">
                <p class="category-validation-edit"  style="display:none;color:red;">Please insert a category name</p>
            </div>
            <div class="submit-container">
                <div class="submit-button">Submit</div>
            </div>
        </div>
    </div>
  </form>
}
    
@using(Html.BeginForm("Delete", "Login", FormMethod.Post)){
    <form method="Post">
    <div id="myPopupDelete" class="popup">
        <input type="hidden" class="delete-value" name="namedelete">
        <div class="popup-content">
            <div class="popup-add-container">
                <p>Delete Category</p>
                <div class="close"><img src="~/img/cross.png"></div>
            </div>
            <div class="popup-insert-container">
                <p>This action is irreversible, Are you sure you want to delete this category?</p>
            </div>
            <div class="submit-container">
                
                 <input type="submit" value="Delete" class="delete" style="border:none;">
            </div>
        </div>
    </div>
    </form>
}

    <div class="category-container">
        <div class="category-title-container">
            <h1>Product Categories</h1>
        </div>

        <div class="category-insert-container">
            <div class="add-category-button">
                <p>Add Category</p>
            </div>

            <div class="category-output-container">
                <div class="category-text-container">
                    <div class="category-name">
                        <p class="num">No.</p>
                        <p class="category">Category</p>
                        <p class="action">Action</p>
                    </div>

                    @foreach(var item in Model){
                        @if (item.UserID == @ViewBag.userID) {
                            <form method="Post">
                                <input type="hidden" name="id" value="@item.CategoryName"></input>
                                <div class="category-name-output">
                                    <p class="num"></p>
                                    <p class="category">@Html.DisplayFor(modal=>item.CategoryName)</p>
                                    <div class="action-container">
                                        <div class="edit-button" runat="server" name="edit" id="editvalue"><p>Edit</p></div>
                                        <div class="delete-button" runat="server"  name="delete" id="deletevalue"><p>Delete</p></div>
                                    </div>
                                </div>
                            </form>
                        }
                    }
                    

                    
                </div>
            </div>
        </div>
    </div>

    <div class="footer-container">
        <div class="logo-container">
            <a href="https://twitter.com/" target="_blank"><img src="~/img/twitter.png" target></a>
            <a href="https://www.facebook.com/" target="_blank"><img src="~/img/facebook.png"></a>
            <a href="https://www.instagram.com/" target="_blank"><img src="~/img/instagram.png"></a>
        </div>

        <div class="footer-text-container">
            <h3>Copyright 2021 &#169; Davenn. All Rights Reserved</h3>
        </div>
    </div>

    <script src="~/js/CategoryNew2.js"></script>
    <script src="~/js/HeaderTest.js"></script>

</body>
</html>
